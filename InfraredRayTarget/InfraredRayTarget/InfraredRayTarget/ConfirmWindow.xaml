<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="InfraredRayTarget.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfraredRayTarget" ShowMaxRestoreButton="False" ShowMinButton="False"
        mc:Ignorable="d" Loaded="OnLoaded" WindowStartupLocation="CenterScreen" KeyDown="OnKeyDown"
        Title="ConfirmWindow" Height="250" Width="450" Topmost="True">
    <Grid>
        <TextBox Name="valueBox" HorizontalAlignment="Left" Height="50" Margin="80,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="确认" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Width="75" Click="OnConfirm"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="250,150,0,0" VerticalAlignment="Top" Width="75" Click="OnCancel"/>
    </Grid>
</Controls:MetroWindow>
